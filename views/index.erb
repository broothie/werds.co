<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <style>
    html, body {
      margin: 0;
      padding: 0;

      width: 100%;
      height: 100%;

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .container {
      width: 50%;
    }

    @media only screen and (max-width: 768px) {
      .container {
        width: 60%;
      }
    }

    .headers {
      width: 100%;
    }

    .title {
      font-size: 5vh;
    }

    form {
      width: 100%;
      height: 100%;

      display: flex;
      flex-direction: column;
    }

    form > textarea {
      resize: none;

      width: 100%;
      height: 10vh;

      box-sizing: border-box;
      border: 1px solid gray;
      margin-top: 1vh;
    }

    form > button {
      margin-top: 1vh;
      padding: 2px;
      border: 1px solid gray;
      width: fit-content;
    }
  </style>

  <link rel="shortcut icon" href="about:blank"/>
  <title>werds.co</title>
</head>
<body>
  <div class="container">
    <div class="headers">
      <span class="title">werds.co</span>
      <br>
      <span class="subtitle">a place for words</span>
    </div>

    <form method="get" action="/">
      <textarea id="werds" name="text" autofocus="autofocus" placeholder="enter some words"></textarea>
      <button id="go" type="submit">Go</button>
    </form>
  </div>
</body>
</html>
